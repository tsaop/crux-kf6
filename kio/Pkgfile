# Description: KIO
# URL: https://invent.kde.org/frameworks/kio
# Maintainer: Tsaop, leeroy at cock dot li
# Depends on: kauth kbookmarks kcompletion kded kiconthemes kitemviews kjobwidgets qt6-5compat solid

name=kio
version=6.0.0
release=1
source=(https://download.kde.org/stable/frameworks/${version::3}/$name-$version.tar.xz)

build() {
	cd $name-$version
	cmake -Bbuild \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DCMAKE_INSTALL_LIBEXECDIR=lib \
		-DBUILD_TESTING=OFF

	cmake --build build
	DESTDIR=$PKG cmake --install build

	rm -rf $PKG/usr/share/{doc,locale}
}
