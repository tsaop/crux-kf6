name=systemsettings
version=6.0.1
release=1
source=(https://download.kde.org/stable/plasma/$version/$name-$version.tar.xz)

build() {
	cd $name-$version
	cmake -Bbuild \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib

	cmake --build build
	DESTDIR=$PKG cmake --install build

	rm -rf $PKG/usr/share/{doc,locale}
}
